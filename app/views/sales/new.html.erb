<h1 class="title text-center">Data Upload <span class="glyphicon glyphicon-transfer" aria-hidden="true"></span></h1>
<br><hr>
<h3>Insira o arquivo .txt com os dados corretos:</h3>

<div class="row">
  <div class="col-lg-12">
    <%= form_for @sale do |f| %>
    <div class="form-group">
      <%= f.label :file, class: 'hidden' %>
      <%= f.file_field :file %>
    </div>
    <div class="actions">
      <%= f.submit "Upload", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
<hr>
<h3 class=""><%= link_to '<i class="glyphicon glyphicon-arrow-right" aria-hidden="true"></i> Ou Veja todos os dados...'.html_safe, sales_path %></h3>

